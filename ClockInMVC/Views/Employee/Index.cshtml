@model List<ClockInMVC.Models.Employee>

@{
    ViewData["Title"] = "All Employees";
}


@if (Model.Count == 0)
{
    <p> No Employee added yet!</p>
}

else
{


    <h5>All Employees </h5>

    <ol>


        @foreach (var employee in Model)
        {
            <li>
                <a asp-controller="Employee" asp-action="EmployeeInfo" asp-route-id="@employee.EmployeeID"> @employee.FirstName @employee.LastName </a>
            </li>

        }
    </ol>



}
<p> <a asp-controller="Employee" asp-action="Add"> Add Employee</a> </p>
